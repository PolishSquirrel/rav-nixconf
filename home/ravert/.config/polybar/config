[bar/top]
width = 100%
height = 30
font-0 = "JetBrains Mono:size=11;2"
background = #2e3440
foreground = #d8dee9
modules-left = workspaces xwindow
modules-center = date
modules-right = cpu memory battery volume network

[module/workspaces]
type = internal/xworkspaces

[module/xwindow]
type = internal/xwindow

[module/date]
type = internal/date
interval = 5
